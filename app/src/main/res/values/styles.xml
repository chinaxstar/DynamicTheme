<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleColor">@color/colorAccent</item>
        <item name="bgColor">#fff</item>
        <item name="listDividerColor">#0000</item>
        <item name="listSelectColor">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="titleColor">#fff</item>
        <item name="bgColor">#ff000000</item>
        <item name="listDividerColor">#fff</item>
        <item name="listSelectColor">@color/colorAccent</item>
    </style>

</resources>
